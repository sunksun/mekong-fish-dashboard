rules_version = '2';

// Firebase Storage Rules for Mekong Fish Dashboard
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is admin or researcher
    function isAdminOrResearcher() {
      return isSignedIn() &&
             (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'researcher');
    }

    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Helper function to check file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Fisher profile photos
    match /fisher-profiles/{userId}/{allPaths=**} {
      // Allow everyone to read
      allow read: if true;

      // Allow any authenticated user to write
      // userId here is Firestore document ID, not Firebase Auth UID
      allow write: if isSignedIn() && isImage() && isValidSize();
    }

    // Fish species images (hyphen version)
    match /fish-species/{fishId}/{allPaths=**} {
      // Allow everyone to read
      allow read: if true;

      // Allow any authenticated user to write (simplified for debugging)
      allow write: if isSignedIn() && isImage() && isValidSize();
    }

    // Fish species images (underscore version)
    match /fish_species/{fishId}/{allPaths=**} {
      // Allow everyone to read
      allow read: if true;

      // Allow any authenticated user to write (simplified for debugging)
      allow write: if isSignedIn() && isImage() && isValidSize();
    }

    // Fishing records photos (hyphen version)
    // Mobile App ใช้ phone-based auth (ไม่มี Firebase Auth) → allow write: if true
    match /fishing-records/{recordId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Fishing records photos (underscore version)
    match /fishing_records/{recordId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Fishing records photos (camelCase version)
    match /fishingRecords/{recordId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Catches photos (if stored separately)
    match /catches/{catchId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Water quality images
    match /water-quality/{stationId}/{allPaths=**} {
      // Allow authenticated users to read
      allow read: if isSignedIn();

      // Allow admin/researcher to write
      allow write: if isAdminOrResearcher() && isImage() && isValidSize();
    }

    // Knowledge base images (articles, wisdom)
    match /knowledge/{category}/{itemId}/{allPaths=**} {
      // Allow everyone to read
      allow read: if true;

      // Allow admin/researcher to write
      allow write: if isAdminOrResearcher() && isImage() && isValidSize();
    }

    // Default: deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
