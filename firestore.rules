rules_version = '2';

// Firestore Security Rules - Unified for Mobile App + Web Dashboard
// Project: tracking-fish-app
// Updated: 2026-02-17
//
// Mobile App: phone-based auth (no Firebase Auth) → ใช้ allow read/write: if true
// Web Dashboard: Firebase Auth → ใช้ isSignedIn() / isAdminOrResearcher()
// ข้อสำคัญ: ไม่แก้ไข rules ที่ Mobile App ใช้อยู่ เพียงเพิ่ม collections ใหม่

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions (Web Dashboard เท่านั้น) ───────────────────────────

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAdminOrResearcher() {
      return isSignedIn() &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'researcher');
    }

    // ── MOBILE APP COLLECTIONS (ไม่แก้ไข) ───────────────────────────────────

    // Users collection — Mobile App ค้นหาด้วย phoneNumber
    match /users/{userId} {
      allow read: if true;
      allow create: if request.resource.data.phoneNumber != null &&
                       request.resource.data.role != null;
      allow update: if true;
      allow delete: if false;
    }

    // Fishers collection — Mobile App (ถ้ามีในอนาคต)
    match /fishers/{fisherId} {
      allow read: if true;
      allow create: if request.resource.data.phoneNumber != null &&
                       request.resource.data.name != null;
      allow update: if true;
      allow delete: if false;
    }

    // Fishing records collection — Mobile App บันทึกข้อมูลการจับปลา
    match /fishingRecords/{recordId} {
      allow read: if true;
      allow create: if request.resource.data.userId != null &&
                       request.resource.data.date != null &&
                       request.resource.data.fishList != null;
      allow update: if true;
      allow delete: if true;
    }

    // Fishing spots collection — Mobile App เลือกจุดจับปลา
    match /fishingSpots/{spotId} {
      allow read: if true;
      allow create: if request.resource.data.name != null;
      allow update: if true;
      allow delete: if false;
    }

    // Fish species collection — Mobile App เลือกชนิดปลา
    match /fish_species/{speciesId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if false;
    }

    // Water quality collection — Mobile App บันทึกข้อมูลคุณภาพน้ำ
    match /waterQuality/{dataId} {
      allow read: if true;
      allow create: if request.resource.data.stationId != null &&
                       request.resource.data.date != null;
      allow update: if true;
      allow delete: if true;
    }

    // ── WEB DASHBOARD ONLY COLLECTIONS ──────────────────────────────────────

    // Payments collection — Web Dashboard จัดการการจ่ายเงิน
    match /payments/{paymentId} {
      allow read, write: if true;
    }

    // Water levels collection — Web Dashboard แสดงกราฟระดับน้ำ
    match /waterLevels/{levelId} {
      allow read: if true;
      allow write: if isAdminOrResearcher();
    }

    // Water stations collection — Web Dashboard
    match /waterStations/{stationId} {
      allow read: if isSignedIn();
      allow write: if isAdminOrResearcher();
    }

    // Knowledge articles collection — Web Dashboard
    match /knowledgeArticles/{articleId} {
      allow read: if true;
      allow write: if isAdminOrResearcher();
    }

    // Fishing wisdom collection — Web Dashboard
    match /fishingWisdom/{wisdomId} {
      allow read: if true;
      allow write: if isAdminOrResearcher();
    }

    // Web users collection — Web Dashboard (landing page registrations)
    match /webUsers/{userId} {
      allow read: if isSignedIn();
      allow create: if true;
      allow update, delete: if isAdmin() || request.auth.uid == userId;
    }

    // Default: deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
